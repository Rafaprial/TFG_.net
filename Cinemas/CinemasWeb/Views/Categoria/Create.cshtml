@model Categoria
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name">Nombre</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
        
            <label asp-for="Orden"></label>
            <input asp-for="Orden" class="form-control"/>
            <span asp-validation-for="Orden" class="text-danger"></span>
        </div>
            <br />
    <button type="submit" class="btn btn-primary" style="width:150px">Crear</button>
    <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Volver
    </a>
    </div>

</form>

@section Scripts{
   @{
    <partial name="_ValidationScriptsPartial"/>
   } 
}

