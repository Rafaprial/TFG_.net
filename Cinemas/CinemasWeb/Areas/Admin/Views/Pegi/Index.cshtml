@model IEnumerable<Pegi>
@{
    ViewData["Title"] = "Index";
}

@*<h1>Index Categorias</h1>*@


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Pegis</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Pegi" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Crear Nueva Pegi</a>
        </div>
    </div>
    <br />
    <br />
    <br />
<table class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>
                Nombre Pegi
            </th>
            <th>
                Edad Maxima
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
            <td width="50%">
                @obj.Name
            </td>
            <td width="30%">
                @obj.EdadMax
            </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Pegi" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                        <a asp-controller="Pegi" asp-action="Delete" asp-route-id="@obj.Id" class="ms-2 btn btn-danger"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                        
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>